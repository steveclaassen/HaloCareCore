    <!-- assignment-type-search -->
    <script>
        $(document).ready(function () {
            $("#assignment-type-search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#assignment-type-filter tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <!-- assignment-item-search -->
