@model HaloCareCore.Models.DoctorViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}

<style>
    body {
        background-color: #f9f9fc !important;
    }
</style>

<div class="fullScreen_container zero-padding">

    <!--pageHeader-->
    <nav id="global-nav" class="nav">
        <div class="pull-left title">
            <h1 class="site-title_patientProfile">
                <span><i class="fas fa-user-md"></i>&emsp; Doctors</span>
            </h1>
        </div>
        <div class="pull-right title">
            <h1 class="site-title_userID pull-right">
                <div class="halocareLogo"><img src="~/Content/Images/Navigation/navBarIcons/haloCare_White.png" /></div>
            </h1>
            <h1 class="site-title_userID pull-right">
                @if (HttpContextAccessor.HttpContext.Session.GetString("Init") != null)
                {
                    <span href="#" id="userMenu-toggle"><span class="initials_Avatar" style="color: white!important; font-size: 16px">@HttpContextAccessor.HttpContext.Session.GetString("Init").ToString() </span></span>
                }
            </h1>
            <h1 class="site-waffleIcon pull-right">
                <span href="#" id="patientMenu-toggle"><span class="waffleIcon" style="color: white!important; font-size: 12px"><i class="fas fa-th"></i></span></span>
            </h1>
        </div>
    </nav>

    <!--breadCrumbs-->
    <ul class="breadcrumbs_fullScreens">
        <li style="font-size: 12px; color: #0081b3; font-weight: 200">You are here:</li>
        <li><a href="@Url.Action("Index", "Home", new {})">Home</a></li>
        <li><a href="@Url.Action("Index", "Doctor", new {})">Doctors</a></li>
        <li><a href="#">@ViewBag.Title</a></li>
    </ul>

    <!--navCollection-->
    <div class="navCollection_fullScreens">
        @Html.Partial("_navCollection")
    </div>

    <div style="margin-bottom: 1%"></div>

    <div class="col-md-12 row">
        <div class="heading-spacer"></div>
        <div class="col-md-6"><div class="page-heading">Doctor details</div></div>
        <hr class="heading-ruler">
    </div>
    <div class="col-md-12">
        <div class="col-md-6">
            <table class="table details-table table-hover" id="doctor-details">
                <tbody>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctor.title)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctor.title)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayName("Full names")</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctor.drLastName)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctor.practiceNo)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctor.practiceNo)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table details-table table-hover" id="doctor-details">
                <tbody>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctor.createdBy)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctor.createdBy)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctor.createdDate)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctor.createdDate)</td>
                    </tr>
                    @if (Model.doctor.modifiedDate != null)
                    {
                        <tr>
                            <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctor.modifiedDate)</td>
                            <td class="row-information">@Html.DisplayFor(model => model.doctor.modifiedDate)</td>
                        </tr>
                        <tr>
                            <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctor.modifiedBy)</td>
                            <td class="row-information">@Html.DisplayFor(model => model.doctor.modifiedBy)</td>
                        </tr>
                    }

                    <tr>
                        <td class="row-heading subject">@Html.DisplayName("Status")</td>
                        <td class="row-information"><span class="@(Model.doctor.active == true ? "chk-yes fas fa-circle" : "chk-no fas fa-circle")"></span>&emsp;@((Model.doctor.active == true) ? "Active" : "Inactive")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="col-md-12 row">
        <div class="heading-spacer"></div>
        <div class="col-md-6"><div class="page-heading">Address details</div></div>
        <hr class="heading-ruler">
    </div>
    <div class="col-md-12">
        <div class="col-md-6">
            <table class="table details-table table-hover" id="address-details">
                <tbody>

                    <tr>
                        <td class="row-heading subject">@Html.DisplayName("Street")</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.Line1)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayName("Suburb")</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.Line2)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table details-table table-hover" id="address-details">
                <tbody>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.City)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.City)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.Province)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.Province)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.ZipCode)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.ZipCode)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="col-md-12 row">
        <div class="heading-spacer"></div>
        <div class="col-md-6"><div class="page-heading">Contact details</div></div>
        <hr class="heading-ruler">
    </div>
    <div class="col-md-12">
        <div class="col-md-6">
            <table class="table details-table table-hover" id="address-details">
                <tbody>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.ContactName)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.ContactName)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.MobileNumber)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.MobileNumber)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.HomeNumber)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.HomeNumber)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table details-table table-hover" id="address-details">
                <tbody>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.Email)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.Email)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.WorkNumber)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.WorkNumber)</td>
                    </tr>
                    <tr>
                        <td class="row-heading subject">@Html.DisplayNameFor(model => model.doctorsInformation.Fax)</td>
                        <td class="row-information">@Html.DisplayFor(model => model.doctorsInformation.Fax)</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
