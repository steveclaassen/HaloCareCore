    <div class="form-group">
        <div class="text-center">
            <input id="edit" value="Edit" class="btn edit-button" onclick="location.href = '@Url.Action("Edit", "Doctor", new { id = Model.doctor.doctorID })'; editKey();" style="width: 15%!important; margin-top: 2%" /><br />
            <input id="back" value="Back" class="btn reset-button go_back" onclick="backKey()" style="width: 15%!important" />
        </div>
    </div>

</div>


@section scripts{
    <script src="~/Scripts/layout-buttons-general.js"></script>


}

