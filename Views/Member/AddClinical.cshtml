        //alert_Weight
        $(document).ready(function () {
            setInterval(function () {
                if ($("#weight").val() == "0.00") {
                    $("#weight").addClass('warningFont');

                }
                else if ($("#weight").val() == "0") {
                    $("#weight").addClass('warningFont');

                }
                else {
                    $("#weight").removeClass('warningFont'),
                        $('#weight').addClass('fontUpdate');


                }
            }, 0);
        });

        //alert_Height
        $(document).ready(function () {
            setInterval(function () {
                if ($("#height").val() == "0.00") {
