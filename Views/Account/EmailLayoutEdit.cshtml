                <div style="margin-bottom: 2%"></div>
                @using (Html.BeginForm("EmailLayoutEdit", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="optionID" name="optionID" value="@ViewBag.OptionID" />

                    if (Model.Count > 0)
                    {
                        <!--------------------------------------------------------------------------- new/search -------------------------------------------------------------------------->
                        <div class="col-md-12 row">
                            <div class="col-md-6">
                                <h4 class="subHeading">
                                    Email layout overview: @ViewBag.ProgramName
                                </h4>
                            </div>
                            <!--------------------------------------------------------------------------- jq-search -------------------------------------------------------------------------->
                            <div class="col-md-6">
                                <div class="input-wrapper-new-search">
                                    <input type="text" class="form-control-new-search" id="el-search" onkeyup="myFunction()" placeholder="Search..." />
                                </div>
                            </div>
                        </div>
                        <table class="table mh-table table-hover" style="margin-left: 1.6%">
                            <thead>
                                <tr>
                                    <th style="text-align: center!important; width: 10%">@Html.DisplayNameFor(model => model[0].Added)</th>
                                    <th>@Html.DisplayNameFor(model => model[0].LayoutDescription)</th>
                                </tr>
                            </thead>

                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <tbody id="el-search">
                                    <tr>
                                        @Html.HiddenFor(model => model[i].AccountID)
                                        @Html.HiddenFor(model => model[i].ProgramID)
                                        @Html.HiddenFor(model => model[i].MedicalAidID)
                                        @Html.HiddenFor(model => model[i].PlanID)
                                        @Html.HiddenFor(model => model[i].LayoutID)

                                        @*<td class="accountCheck">@Html.EditorFor(model => model[i].Added)</td>*@
                                        <td class="accountCheck">
                                            @Html.CheckBoxFor(model => model[i].Added, new { @id=Model[i].LayoutID, @value = Model[i].LayoutType + " | " + Model[i].LayoutID + " | true", onClick = "ckChange(this)" })
                                        </td>
                                        <td>@Html.DisplayFor(model => model[i].LayoutDescription)</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                        <div>
                            <span class="@(Model.Count <= 12 ? "sf-footer" : "account-footer pull-right")">
                                <input type="button" id="account-back-et" value="Back" class="btn modal-button-previous go_back" />
                                <input type="submit" id="account-update-et" value="Update" class="btn modal-button-next" />
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="no-results-1">
                            <img src="~/Content/Images/_2020/tables/no-results-5.png" />
                        </div>
                        <h4 class="no-results">No email message templates found for program</h4>
                        <div style="text-align: center">
                            <input type="button" onclick="location.href='@Url.Action("Index", "Template" , null)'" value="Settings" class="btn modal-button-default" />
                        </div>

                        <div class="sf-footer">
                            <input type="button" id="account-back-et" value="Back" class="btn modal-button-previous go_back" />
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/bundles/jqueryval"></script>
    <script type="text/javascript">
        var $rows = $('#el-search tr');
        $('#el-search').keyup(function () {
            var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();

            $rows.show().filter(function () {
                var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
                return !~text.indexOf(val);
            }).hide();
        });
    </script>
    <script>
            function ckChange(ckType) {
                $("input[type=checkbox]").each(function (i) {
                    if (this.checked) {
                        if (~ckType.value.toLowerCase().indexOf('header')) {
                            $('input[type=checkbox]').each(function () {
                                if (~this.value.toLowerCase().indexOf('header') && !~this.id.indexOf(ckType.id)) {
                                    $('.accountCheck input[type=checkbox]#' + ckType.id).addClass("h1");
                                    $('.accountCheck input[type=checkbox]#' + this.id).addClass("h2");
                                    $('.accountCheck input[type=checkbox]#' + this.id).attr("disabled", true);
                                }
                            });
                        }
                        if (~ckType.value.toLowerCase().indexOf('footer')) {
                            $('input[type=checkbox]').each(function () {
                                if (~this.value.toLowerCase().indexOf('footer') && !~this.id.indexOf(ckType.id)) {
                                    $('.accountCheck input[type=checkbox]#' + ckType.id).addClass("f1");
                                    $('.accountCheck input[type=checkbox]#' + this.id).addClass("f2");
                                    $('.accountCheck input[type=checkbox]#' + this.id).attr("disabled", true);
                                }
                            });
                        }
                    }
                });

                var h1 = $('input.h1:checkbox:checked').length;
                var f1 = $('input.f1:checkbox:checked').length;

                if (h1 == 0) {
                    $('input.h1').removeClass("h1");
                    $('input.h2').attr("disabled", false);
                    $('input.h2').removeClass("h2");
                }

                if (f1 == 0) {
                    $('input.f1').removeClass("h1");
                    $('input.f2').attr("disabled", false);
                    $('input.f2').removeClass("f2");
                }
            }
        </script>
    
}