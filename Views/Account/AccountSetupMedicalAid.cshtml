@model HaloCareCore.Models.ViewModels.MedicalAidSetupViewModal


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.medicalAidID, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-horizontal">
        <h4>MedicalAidSetupViewModal</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.allowAuth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.allowAuth)
                    @Html.ValidationMessageFor(model => model.allowAuth, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.schemePlans, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.selectedSchemeOptions, new MultiSelectList(Model.schemePlans, "id", "Name"),
                        new { multiple = "multiple", @class = "multiple" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.schemePrograms, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.selectedPrograms, new MultiSelectList(Model.schemePrograms, "programID", "ProgramName"),
                        new { multiple = "multiple", @class = "multiple" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rules & Statuses" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/bundles/jqueryval"></script>
}
