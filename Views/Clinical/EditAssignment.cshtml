    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row contentBlock_pathology">
            <h4 style="color: #003366">Edit <span style="color: #0081b3"> an Assignment</span></h4>
            <hr class="fancyruler">

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.assignmentID)

                <div class="form-group">
                    @Html.LabelFor(model => model.postpone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox assignmentCheck">
                            @Html.EditorFor(model => model.postpone)
                            @Html.ValidationMessageFor(model => model.postpone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.postponeToDate, htmlAttributes: new { @class = "control-label col-md-2 drop" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.postponeToDate, new { htmlAttributes = new { @class = "infoBox_Enrollment" } })
                        @Html.ValidationMessageFor(model => model.postponeToDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.postponementReason, htmlAttributes: new { @class = "control-label col-md-2 drop" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.postponementReason, new { htmlAttributes = new { @class = "infoBox_Enrollment" } })
                        @Html.ValidationMessageFor(model => model.postponementReason, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox assignmentCheck">
                            @Html.EditorFor(model => model.Active)
                            @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comment, htmlAttributes: new { @class = "control-label col-md-2 drop" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comment, new { htmlAttributes = new { @class = "infoBox_Enrollment" } })
                        @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <div class="actionButton" style="margin-left: 48%; margin-bottom: -1.5%">
                    <input type="submit" value="Save" class="btn buttonRound_scriptAdd" style="width: 15%!important" />
                </div>
            </div>
            <br />
        </div>
    }

<br />
<br />
<br />

<div class="backButton_image">
    <span id="surround" class="go_back">
        <span id="initial"><img src="~/Content/Images/memberProfile/Page Icons/back_gray.png" /></span>
        <span id="onhover"><img src="~/Content/Images/memberProfile/Page Icons/back_blue.png" /></span>
    </span>
</div>



<!-- Search -->
@section scripts{
    <script>

        var $rows = $('#table tr');
        $('#search').keyup(function () {
            var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();

            $rows.show().filter(function () {
                var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
                return !~text.indexOf(val);
            }).hide();
        });



    </script>
}