@model HaloCareCore.Models.Communications.Assignments

@{
    ViewBag.Title = "EditAssignment";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}



<div class="topBar_informationNavigation"><h2 class="topBar_Header">Edit Assignments</h2></div>
<div class="topBar_image">
    <img src="~/Content/Images/memberProfile/topBar Icons/openAssignments.png" style="width: 3.5%" />
</div>
<br />
<br />
