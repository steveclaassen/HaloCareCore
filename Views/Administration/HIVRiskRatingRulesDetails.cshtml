@model HaloCareCore.Models.Management.HIVRiskRatingRules
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "HIVRiskRatingRulesDetails";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}
<style>
    body {
        background-color: #f9f9fc !important;
    }

    .field-validation-error:before {
        font-family: FontAwesome;
        content: "\f06a\00a0";
        animation: pulse 2s ease infinite;
    }

    .tooltip-wrapper {
        display: inline-block;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
<link href='http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.min.css' rel='stylesheet' type='text/css'>

<div class="fullScreen_container zero-padding">

    <!--pageHeader-->
    <nav id="global-nav" class="nav">
        <div class="pull-left title">
            <h1 class="site-title_patientProfile">
                <span><i class="fab fa-digital-ocean fa-rotate-90"></i>&emsp; HIV Staging rules Details</span>
            </h1>
        </div>
        <div class="pull-right title">
            <h1 class="site-title_userID pull-right">
                <div class="halocareLogo"><img src="~/Content/Images/Navigation/navBarIcons/haloCare_White.png" /></div>
            </h1>
            <h1 class="site-title_userID pull-right">
                @if (HttpContextAccessor.HttpContext.Session.GetString("Init") != null)
                {
                    <span href="#" id="userMenu-toggle"><span class="initials_Avatar" style="color: white!important; font-size: 16px">@HttpContextAccessor.HttpContext.Session.GetString("Init").ToString() </span></span>
                }
            </h1>
            <h1 class="site-waffleIcon pull-right">
                <span href="#" id="patientMenu-toggle"><span class="waffleIcon" style="color: white!important; font-size: 12px"><i class="fas fa-th"></i></span></span>
            </h1>
        </div>
    </nav>

    <!--breadCrumbs-->
    <ul class="breadcrumbs_fullScreens">
        <li style="font-size: 12px; color: #0081b3; font-weight: 200">You are here:</li>
        <li><a href="@Url.Action("Index", "Home", new {})">Home</a></li>
        <li><a href="@Url.Action("HIVRiskRatingRulesList", "Administration", new {})">HIV Program Risk Rules</a></li>
        <li><a href="#">Detail</a></li>
    </ul>

    <!--navCollection-->
    <div class="navCollection_fullScreens">
        @Html.Partial("_navCollection")
    </div>

    <div style="margin-bottom: 1%"></div>
    <h2></h2>

    <div class="row">
        <h4 class="tableHeading">HIV Staging rules Details</h4>
        <hr class="fancyruler">
        <br />
        <div style="margin-left: 0%">
            <dl class="dl-horizontal editForm">
                <dt>
                    @Html.DisplayNameFor(model => model.effectiveDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.effectiveDate)
                </dd>
                <br />
                <hr class="fancyruler" />
                <dt>
                    @Html.DisplayNameFor(model => model.CD4Count)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CD4Count)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CD4Percentage)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CD4Percentage)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.viralLoad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.viralLoad)
                </dd>
                <br />
                <hr class="fancyruler" />
                <dt>
                    @Html.DisplayNameFor(model => model.ltValue)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ltValue)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.gtValue)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.gtValue)
                </dd>
                <br />
                <hr class="fancyruler" />
                <dt>
                    @Html.DisplayNameFor(model => model.stage)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stage)
                </dd>
                <br />
                <hr class="fancyruler" />
                <dt>
                    @Html.DisplayNameFor(model => model.createdBy)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.createdBy)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.createdDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.createdDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.modifiedBy)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.modifiedBy)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.modifiedDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.modifiedDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.active)
                </dt>

                <dd class="activeCheck">
                    @if (Model.active)
                    {
                        <img src="~/Content/Images/Icons/Administration/AssignmentTrue.png" style="width: 20%; margin-left: -1%!important" />
                    }
                    else
                    {
                        <img src="~/Content/Images/Icons/Administration/AssignmentFalse.png" style="width: 20%; margin-left: -1%!important" />
                    }
                </dd>

            </dl>
        </div>
        <div class="fixedBack" style="margin-left: 42.4%">
            <input value="Back" class="btn buttonRound_formBack go_back" onclick="backKey()" style="width: 15%!important" />
            <a href="@Url.Action("HIVRiskRatingRulesEdit", "Administration", new { id = Model.id })" value="Edit" class="btn buttonRound_formEdit" style="width: 15%!important">Edit</a>
        </div>
    </div>


    @section scripts{
        <script src="~/Scripts/layout-buttons-general.js"></script>
        <script>
            function backKey() {
                localStorage.setItem("back_hivrules", Date.now());
            }
        </script>
    }
